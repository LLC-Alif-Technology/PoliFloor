            <div class="bottom-block">
                <a asp-action="Cart" asp-controller="Home" class="cart" asp-route-alias="">
                    <span class="cart-block">
                        <span class="cart-image">
                            <img src="~/client/img/new-cart.png" alt="" />
                        </span>
                        <span class="CartIcon">
                            @Model.CartView.CountProducts
                        </span>
                    </span>
                </a>
                <a asp-action="Calculator" asp-controller="Home" asp-route-alias="" class="calc"><img
                    src="~/client/img/new-calc.png" alt=""></a>
            </div>

        </div>
    </header>
}