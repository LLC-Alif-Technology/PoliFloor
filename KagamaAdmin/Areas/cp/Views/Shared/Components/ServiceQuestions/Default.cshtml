@model IEnumerable<KagamaAdmin.Areas.cp.ViewModels.Service.AddQuestionView>

<table class="table">
    <thead>
    <tr>
        <th></th>
        <th></th>
        <th></th>
    </tr>
    </thead>
    <tbody>
    @{ int i = 1;}
    @foreach (var c in Model)
    {
        <tr>
            <td><i>@(i++)</i></td>
            <td>@c.Title</td>
            <td class="td_btns">
                <div class="wrap-btn">
                    <a class="btn-table btn-delete" asp-controller="Service" asp-action="ServiceQuestionDelete" asp-area="cp" asp-route-artId="@c.Id" asp-route-serviceId="@c.ServiceId">
                        <img src="~/cp/img/delete.png" alt="">Удалить
                    </a>
                </div>
            </td>
        </tr>
    }
    </tbody>
</table>