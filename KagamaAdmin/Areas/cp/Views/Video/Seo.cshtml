@model KagamaAdmin.Areas.cp.ViewModels.Video.SeoView

<div class="bread">
    <a asp-controller="Video" asp-action="Index" asp-area="cp" class="back">
        <img src="~/cp/img/back.png" alt="">Видео-отзывы
    </a>
    <p>Обновить видео-отзыв: @Model.Title</p>
</div>
<div class="main-tabs-btn">
    <a asp-controller="Video" asp-action="Edit" asp-route-id="@Model.Id">Основное</a>
    <a class="active">Seo</a>
</div>

<div class="main-tab active">
    <form asp-action="Seo" asp-controller="Video" asp-area="cp" asp-antiforgery="true">
        <input type="hidden" asp-for="Title" />
        <input type="hidden" asp-for="Id" />
        <div class="input">
            <label asp-for="SeoTitle"></label>
            <input type="text" asp-for="SeoTitle" placeholder="Seo title" />
        </div>
        <div class="input">
            <label asp-for="SeoDescription"></label>
            <textarea asp-for="SeoDescription" placeholder="Seo description"></textarea>
        </div>
        <div class="input">
            <label asp-for="SeoKeywords"></label>
            <input type="text" asp-for="SeoKeywords" placeholder="Seo keywords" />
        </div>
        <div class="flex-button">
            <input class="btn-primary" type="submit" value="Сохранить" />
            <a class="btn-primary btn-secondary" asp-controller="Video" asp-action="Index" asp-area="cp">Отмена</a>
        </div>
    </form>
</div>