        </div>*@
        <div class="flex-button">
            <input class="btn-primary" type="submit" value="Добавить" />
        </div>
    </form>
    <table class="table">
        <thead>
            <tr>
                <th></th>
                <th></th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @{ int i = 1;}
            @foreach (var c in Model.CalcCategories)
            {
                <tr>
                    <td><i>@(i++)</i></td>
                    <td>@c.Title</td>
                    <td class="td_btns">
                        <div class="wrap-btn">
                            <a class="btn-table btn-edit" asp-controller="Calc" asp-action="Edit" asp-area="cp" asp-route-id="@c.Id">
                                <img src="~/cp/img/edit.png" alt="">Изменить
                            </a>
                            <a class="btn-table btn-delete" asp-controller="Calc" , asp-action="Delete" asp-area="cp" asp-route-id="@c.Id">
                                <img src="~/cp/img/delete.png" alt="">Удалить
                            </a>
                        </div>
                    </td>
                </tr>
            }
        </tbody>
    </table>
