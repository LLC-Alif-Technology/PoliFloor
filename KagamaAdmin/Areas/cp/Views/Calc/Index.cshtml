@model KagamaAdmin.Areas.cp.ViewModels.Calc.CalcCategoryView

<div class="bread">
    <p>Создание категории для калькулятора</p>
</div>
<div class="main-tabs-btn">
    <a href="#main-tab" class="active">Основное</a>
</div>
<div id="main-tab" class="main-tab active">
    <form asp-action="Index" asp-controller="Calc" asp-area="cp" asp-antiforgery="true">
        <div class="input">
            <label asp-for="@Model.CalcCategory.Title"></label>
            <input type="text" asp-for="@Model.CalcCategory.Title" placeholder="Введите заголовок" class="js_translate_get" onkeyup="translateUrl()" />
            <span class="error" asp-validation-for="@Model.CalcCategory.Title"></span>
        </div>
        <div class="input">
            <label asp-for="@Model.CalcCategory.TitleH1"></label>
            <input type="text" asp-for="@Model.CalcCategory.TitleH1" placeholder="Заголовок h1" />
        </div>
        <div class="input">
            <label asp-for="@Model.CalcCategory.Alias"></label>
            <input type="text" asp-for="@Model.CalcCategory.Alias" placeholder="Введите Url" class="js_translate_set" />
        </div>
        <div class="flex-block" style="display:flex;">
            @*<div class="input" style="margin-right: 50px;">
                <label asp-for="@Model.CalcCategory.Glossy"></label>
