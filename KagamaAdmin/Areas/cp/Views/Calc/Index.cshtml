                        <input type="checkbox" asp-for="@Model.CalcCategory.Glossy" class="checkbox" />
                        <div class="check"></div>
                    </div>
                </div>
            </div>
            <div class="input" style="margin-right: 50px;">
                <label asp-for="@Model.CalcCategory.SemiMatt"></label>
                <div class="flex-switcher">
                    <div class="switcher">
                        <input type="checkbox" asp-for="@Model.CalcCategory.SemiMatt" class="checkbox" />
                        <div class="check"></div>
                    </div>
                </div>
            </div>*@
            <div class="input">
                <label asp-for="@Model.CalcCategory.Matt"></label>
                <div class="flex-switcher">
                    <div class="switcher">
                        <input type="checkbox" asp-for="@Model.CalcCategory.Matt" class="checkbox" />
                        <div class="check"></div>
                    </div>
                </div>
            </div>
        </div>
        <div class="input" style="max-width: 100%">
            <label asp-for="@Model.CalcCategory.Desc"></label>
            <textarea asp-for="@Model.CalcCategory.Desc" id="ck_editor_1"></textarea>
        </div>
