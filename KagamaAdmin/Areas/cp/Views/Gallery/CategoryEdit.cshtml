@model KagamaModels.Entities.GalleryCategory

<div class="bread">
    <a asp-controller="Gallery" asp-action="CategoryCreate" asp-area="cp" class="back">
        <img src="~/cp/img/back.png" alt="">Назад
    </a>
    <p>@Model.Title</p>
</div>

<div class="main-tab active">
    <form asp-action="CategoryEdit" asp-controller="Gallery" asp-area="cp" asp-antiforgery="true" enctype="multipart/form-data">
        <input type="hidden" asp-for="Id" />
        <input type="hidden" asp-for="Icon" class="js_imgbanner" />
        @if (!string.IsNullOrEmpty(Model.Icon))
        {
            <img src="@Model.Icon" style="height: 30px; display: block;" class="js_show_imgbanner" />
            <a class="js_delete_imgbanner" style="padding: 15px 0; display: inline-block;">Удалить фото</a>
        }
        <div class="fileinput">
            <input type="file" asp-for="Icon" id="file_icon" />
            <div class="check">Добавить иконку</div>
        </div>
        <div class="input">
            <label asp-for="Title"></label>
            <input type="text" asp-for="Title" placeholder="Введите заголовок" class="js_translate_get" />
            <span class="error" asp-validation-for="Title"></span>
        </div>
        <div class="input">
            <label asp-for="TitleH1"></label>
            <input type="text" asp-for="TitleH1" placeholder="Введите заголовок h1" />
        </div>
        <div class="input">
            <label asp-for="Alias"></label>
            <input type="text" asp-for="Alias" placeholder="Введите заголовок (Url)" class="js_translate_set" />
        </div>
        <div class="input">
            <label>Статус</label>
            <div class="flex-switcher">
                <p>Показать</p>
                <div class="switcher">
                    <input type="checkbox" asp-for="Show" class="checkbox" />
                    <div class="check"></div>
                </div>
            </div>
        </div>
        <div class="input">
            <label asp-for="SeoTitle"></label>
            <input type="text" asp-for="SeoTitle" placeholder="Seo title" />
        </div>
        <div class="input">
            <label asp-for="SeoDescription"></label>
            <input type="text" asp-for="SeoDescription" placeholder="Seo description" />
        </div>
        <div class="input">
            <label asp-for="SeoKeywords"></label>
            <input type="text" asp-for="SeoKeywords" placeholder="Seo keywords" />
        </div>
        <div class="flex-button">
            <input class="btn-primary" type="submit" value="Сохранить" />
        </div>
    </form>
</div>