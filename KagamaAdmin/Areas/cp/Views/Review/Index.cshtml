@model KagamaAdmin.ViewModel.ReviewView


<div class="reviews-admin">
    <table>
        <thead>
            <tr>
                <th>Имя</th>
                <th>Город</th>
                <th>Оценка</th>
                <th>Отзыв</th>
                <th>Фото</th>
                <th>Запрос</th>
                <th>Дата</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.Review)
            {
                <tr>
                    <td>@item.Name</td>
                    <td>@item.City</td>
                    <td>@item.Rating</td>
                    <td>@item.Title</td>
                    <td class="reviews-admin-img">
                        @if (@item.Img != null)
                        {
                            <img src="@item.Img" />
                            <img src="@item.Img2" />
                            <img src="@item.Img3" />
                            <img src="@item.Img4" />
                        }
                    </td>
                     
                    @if (!item.IsAllowed)
                    {
                        <form class="form"  enctype="multipart/form-data" method="post">
                            <td class="reviews-admin-cancle">
                                <input asp-action="UpdateReview" asp-controller="Review" type="submit" asp-route-ReviewId="@item.Id" value="Подтвердить">
                            </td>
                        </form>
                    }
                    else
                    {
                        <form class="form"  enctype="multipart/form-data" method="post">
                            <td class="reviews-admin-cancle">
                                <input asp-action="UpdateReview" asp-controller="Review" type="submit" asp-route-ReviewId="@item.Id" value="Отклонить">
                                </td>
                            </form>
                    }
                    <td>@item.CreationData</td>
                </tr>
            }
        </tbody>
    </table>
</div>
